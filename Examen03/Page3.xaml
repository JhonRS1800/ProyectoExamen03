<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Examen03.Page3">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#296F70">
            <StackLayout BackgroundColor="#0C57B2">
                <Label Text="Proyectos Grupales"
                HorizontalOptions="CenterAndExpand" 
                TextColor="White" FontSize="20" FontAttributes="Bold" Margin="7"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Button Text="Calculadora  ICE" Clicked="BtCalc" Margin="3" BackgroundColor="#209A6D"/>
                <Button Text="Formulario ICE" Clicked="BtForm" Margin="3" BackgroundColor="#209A6D"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>