                <Image Source="quinceuno.jpg" Margin="3" HeightRequest="100" WidthRequest="130"/>
                <Image Source="quincedos.jpg" Margin="3" HeightRequest="100" WidthRequest="130"/>
                <Image Source="quincetres.jpg" Margin="3" HeightRequest="100" WidthRequest="130"/>
                <Image Source="quincecuatro.jpg" Margin="3" HeightRequest="100" WidthRequest="130"/>
            </StackLayout>
            <Label Text="Practica 16" FontSize="18" FontAttributes="Bold" />
            <StackLayout Orientation="Horizontal">
                <Image Source="dieciseisuno.jpg" Margin="3" HeightRequest="100" WidthRequest="200"/>
